generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Payment {
  id            Int      @id @default(autoincrement())
  amount        Float
  method        String
  recipient     String
  description   String?
  gateway       String   @default("razorpay")
  transactionId String
  status        String   @default("Success")
  createdAt     DateTime @default(now())
}